  "bugs": {
    "url": "https://github.com/swiss-knife-scss/swiss-knife-scss/issues"
  },
  "homepage": "https://github.com/swiss-knife-scss/swiss-knife-scss#readme",
  "devDependencies": {
    "@commitlint/cli": "^19.2.2",
    "@commitlint/config-conventional": "^19.2.2",
    "commitizen": "^4.3.0",
    "cz-customizable": "^7.0.0",
    "lint-staged": "^15.2.2",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.3.0",
    "sass": "^1.77.4",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-order": "^6.0.4",
    "stylelint-prettier": "^4.1.0",
